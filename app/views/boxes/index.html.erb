<h1>Boxes#index</h1>
<p>Find me in app/views/boxes/index.html.erb</p>

<ol>
  <% @boxes.each_with_index do |box, i| %>
    <li>
      <p><strong><%= box.name %></strong> | (<em><%= box.size %></em>) || <%= link_to "Edit dat shiet", edit_box_path(box) %> || <%= link_to "Delete dat shiet", box_path(box), method: :delete %> | style: <%= box.style.name %> | sound: <%= box.sound.name %> <%= render 'sounds/play_button', sound: box.sound, id: i %></p>
    </li>
    <hr>
  <% end %>
</ol>
