<h1>Boxes#index</h1>
<p>Find me in app/views/boxes/index.html.erb</p>

<ol>
  <% @boxes.each do |box| %>
    <li>
      <p><strong><%= box.name %></strong> | (<em><%= box.size %></em>) || <%= link_to "Edit dat shiet", edit_box_path(box) %> || <%= link_to "Delete dat shiet", box_path(box), method: :delete %> | style: <%= box.style.on_verra %> | sound: <%= box.sound.animal %></p>
    </li>
    <hr>
  <% end %>
</ol>
